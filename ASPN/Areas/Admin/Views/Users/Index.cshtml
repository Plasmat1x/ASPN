@using Microsoft.AspNetCore.Identity;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@model IQueryable<User>

@{
    ViewBag.Title = "Users";
}

<div>
        <ul>
            @foreach (User user in Model)
            {
                <li>
                    <a asp-area="Admin" asp-controller="Users" asp-action="User" asp-route-id="@user.Id">@user.UserName</a>

                    <form asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <input type="submit" value="Delete">
                    </form>
                </li>
            }
        </ul>
</div>