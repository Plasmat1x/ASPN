@using Microsoft.AspNetCore.Identity;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@inject UserManager<User> umgr

@{
    ViewBag.Title = "Users";
}

<div>
    <div>
        <ul>
            @foreach (var user in umgr.Users)
            {
                <li>
                    <div>
                        <a asp-area="Admin" asp-controller="Users" asp-action="User" asp-route-id="@user.Id">@user.UserName</a>
                    </div>

                    <form style="display: inline-block;" id="form-@user.Id" asp-area="Admin" asp-controller="Users" asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@user.Id">
                        <a href="#" onclick="document.getElementById('form-@user.Id').submit();">Delete</a>
                    </form>
                </li>
            }
        </ul>

    </div>
</div>