@model SigninUserViewModel

<div>
    <h2>Signin Account</h2>
    <div>
        <form asp-area="" asp-controller="Account" asp-action="Signin" method="post">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email"/>
                <span asp-validation-formaction="Email"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="RememberMe"></label>
                <input type="checkbox" asp-for="RememberMe" />
                <span asp-validation-for="RememberMe"></span>
            </div>
            <div>
                <input type="submit" value="Signin"/>
            </div>
            <div>
                <label>Dont Have Account?</label>
                <span>
                    <a asp-area="" asp-controller="Account" asp-action="Signup" method="post">Create</a>
                </span>
            </div>
        </form>
    </div>
</div>
