@model RegisterViewModel

<div>
    <h2>Register account</h2>
    <div>
        <form asp-area="" asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="Login"></label>
                <input asp-for="Login" />
                <span asp-validation-formaction="Login"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="PasswordConfirm"></label>
                <input asp-for="PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div>
                <input type="submit" value="Register" />
            </div>
        </form>
    </div>
</div>