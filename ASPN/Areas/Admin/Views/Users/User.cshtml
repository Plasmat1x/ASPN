@using Microsoft.AspNetCore.Identity;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@model UserViewModel

@{
    ViewBag.Title = "User";
}

<div>
    <a asp-area="Admin" asp-controller="Users" asp-action="AddRole" asp-route-id="@Model.Id">Add Users to role</a>
    <hr />
    <h3>@Model.UserName</h3>
    <ul>
        <li asp-for="Id">@Model.Id</li>
        <li>@nameof(Model.UserName): @Model.UserName</li>
        <li>@nameof(Model.FirstName): @Model.FirstName</li>
        <li>@nameof(Model.LastName): @Model.LastName</li>
        <li>@nameof(Model.Email): @Model.Email</li>
        <li>@nameof(Model.PhoneNumber): @Model.PhoneNumber</li>
        <li>@nameof(Model.Birthday): @Model.Birthday</li>
        <li>@nameof(Model.CreatedAt): @Model.CreatedAt</li>

        <li>Roles</li>
        @foreach(var role in Model.Roles)
        {
            <div>
                @role
            </div>
        }
    </ul>
</div>

