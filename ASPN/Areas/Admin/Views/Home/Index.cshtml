@model UserViewModel

@{
    ViewBag.Title = "Admin";
}

<div>
    <h3>@Model.UserName</h3>
    
    <div>
        <div>
            <label asp-for="Id"></label>
            <input asp-for="Id" readonly />
        </div>
        <div>
            <label asp-for="FirstName"></label> 
            <input asp-for="FirstName" readonly />
        </div>
        <div>
            <label asp-for="LastName"></label> 
            <input asp-for="LastName" readonly />
        </div>
        <div>
            <label asp-for="Email"></label> 
            <input asp-for="Email" readonly />
        </div>
        <div>
            <label asp-for="PhoneNumber"></label> 
            <input asp-for="PhoneNumber" readonly />
        </div>
        <div>
            <label asp-for="Birthday"></label>
            <input asp-for="Birthday" readonly />
        </div>
        <div>
            <label asp-for="CreatedAt"></label>
            <input asp-for="CreatedAt" readonly />
        </div>
    </div>
    <hr />
    <h4>Roles: </h4>
    <ul>
        @foreach (var role in Model.Roles)
        {
            <li>@role</li>
        }
    </ul>
    <hr />
    <div>
        <a asp-area="" asp-controller="Account" asp-action="Edit">
            <input type="submit" value="Edit" />
        </a>
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Logout" />
        </form>
    </div>
    <hr />
    <div>
        <div>
            <h2>Admin controll</h2>
        </div>
        <div>
            <a asp-area="Admin" asp-controller="Users" asp-action="Index"><input type="submit" value="Users" /></a>

            <a asp-area="Admin" asp-controller="Roles" asp-action="Index"><input type="submit" value="Roles" /></a>
        </div>
    </div>
</div>