@using Microsoft.AspNetCore.Identity;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@model User

@inject UserManager<User> umgr
@inject RoleManager<Role> rmgr

@{
    ViewBag.Title = "User";
}


<div>
    <h3>@Model.UserName</h3>
    <ul>
        <li>@nameof(Model.Id): @Model.Id</li>
        <li>@nameof(Model.UserName): @Model.UserName</li>
        <li>@nameof(Model.FirstName): @Model.FirstName</li>
        <li>@nameof(Model.LastName): @Model.LastName</li>
        <li>@nameof(Model.Email): @Model.Email</li>
        <li>@nameof(Model.PhoneNumber): @Model.PhoneNumber</li>
        <li>@nameof(Model.Birthday): @Model.Birthday</li>
        <li>@nameof(Model.CreatedAt): @Model.CreatedAt</li>
        <li>Rolers: @foreach(var r in await umgr.GetRolesAsync(Model)){ <p>@r</p> }</li>
    </ul>
</div>

