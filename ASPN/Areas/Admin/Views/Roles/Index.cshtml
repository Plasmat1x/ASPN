@using Microsoft.AspNetCore.Identity;

@model IQueryable<Role>

@{
    ViewBag.Title = "Roles";
}

<div>
    <div>
        <a asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="">Add new role</a>
    </div>
    <hr />
    <div>
        <ul>
            @foreach(var role in Model) {
                <li>
                    <a asp-area="Admin" asp-controller="Roles" asp-action="Role" asp-route-id="@role.Id">@role.Name</a>

                    <form asp-area="Admin" asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <input type="submit" value="Delete">
                    </form>
                </li>
            }
        </ul>
    </div>
</div>