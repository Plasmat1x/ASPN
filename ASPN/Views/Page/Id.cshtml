@model Page

@{
    ViewBag.Title = Model.CodeWord;
}

<div>
    <a asp-area="" asp-controller="Page" asp-action="Edit" asp-route-id="@Model.Id" method="post">Edit</a>
    <hr />
    <h1>@Model.Title</h1>

    @Html.Raw(Model.Text)

    <hr />
    <p>@Model.CreatedAt</p>
    <p>Author: @Model.Author</p>
</div>


