@model RegisterRoleViewModel

@{
    string Title = "Edit Role";
    ViewBag.Title = Title;
}

<div class="card-body">
    <h2>@Title</h2>
    <div>
        <form asp-area="Admin" asp-controller="Roles" asp-action="Register" method="post">
            <div asp-validation-summary="All"></div>

            <div>
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" />
                <span asp-validation-for="RoleName"></span>
            </div>

            <input type="submit" value="Save" />
        </form>
    </div>
</div>