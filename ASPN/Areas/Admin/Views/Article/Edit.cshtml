@model Article

@{
    string Title = "Edit Article";
    ViewBag.Title = Title;
}

<div class="card-body">
    <h2>@Title</h2>
    <div>
        <form asp-area="Admin" asp-controller="Article" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="CreatedAt"/>

            <div asp-validation-summary="All"></div>

            <div>
                <label asp-for="Title"></label>
                <input asp-for="Title"/>
                <span asp-validation-for="Title"></span>
            </div>

            <div>
                <label asp-for="CodeWord"></label>
                <input asp-for="CodeWord"/>
                <span asp-validation-for="CodeWord"></span>
            </div>

            <div>
                <label asp-for="Description"></label>
                <input asp-for="Description" />
                <span asp-validation-for="Description"></span>
            </div>

            <div>
                <label asp-for="Text"></label>
                <textarea id="tmce" asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>

            <input type="submit" value="Save"/>
        </form>
    </div>
</div>