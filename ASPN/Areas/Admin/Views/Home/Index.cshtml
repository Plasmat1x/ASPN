@model IdentityUser

@{
    string strTitle = "Admin panel";
    ViewBag.Title = strTitle;
}

<div class="text-center">
    <div>
        <h1 class="display-4">@strTitle</h1>
        <h3>@Model.UserName</h3>
    </div>

    <div>
        <ul>
            <li><a asp-area="Admin" asp-controller="Articles" asp-action="Index">Articles</a></li>
            <li><a asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a></li>
            <li><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Roles</a></li>
        </ul>
    </div>

    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Logout" />
        </form>
    </div>
</div>